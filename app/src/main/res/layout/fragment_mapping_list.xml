<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rb.workcatalog.fragments.tabs.MappingListFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/mapp_header"
        android:background="@color/authColorBackground"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_create_mapp_btn"
            android:drawableStart="@android:drawable/ic_input_add"
            android:text="add to change after"/>


    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapping_list_view"
        android:layout_below="@+id/mapp_header" />
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/emptyView"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="22sp"
        android:textColor="@color/authColorBackgroundDark"
        android:text="@string/sorry_there_is_no_data_to_show_at_this_moment"/>



</RelativeLayout>
